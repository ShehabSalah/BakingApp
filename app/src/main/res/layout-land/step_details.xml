<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id="@+id/step_holder_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            app:cardElevation="4dp"
            android:background="#38414b"
            app:cardCornerRadius="3dp"
            android:layout_marginBottom="55dp"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/shortDescribe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Starting prep"

                    android:padding="@dimen/activity_vertical_margin"
                    android:background="@color/headerColor"
                    android:textColor="@color/white_text"
                    android:textSize="@dimen/text_sub_header"/>
                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:padding="@dimen/activity_vertical_margin"
                    android:layout_height="wrap_content"
                    tools:text="1. Preheat the oven to 350\u00b0F. Butter a 9 deep dish pie pan."
                    android:textSize="@dimen/text_body"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/ingredients_holder_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            app:cardElevation="4dp"
            android:background="#38414b"
            app:cardCornerRadius="3dp"
            android:layout_marginBottom="55dp"
            android:visibility="gone">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/ingredients_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Ingredients"
                    android:background="@color/headerColor"
                    android:textColor="@color/white_text"
                    android:text="@string/ingredients_title"
                    android:padding="@dimen/activity_vertical_margin"
                    android:textSize="@dimen/text_sub_header"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/details_bg"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_vertical_margin"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ingredients_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/video_holder_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="false"
        android:paddingBottom="@dimen/no_margin"
        android:paddingLeft="@dimen/no_margin"
        android:paddingRight="@dimen/no_margin"
        android:paddingTop="@dimen/no_margin"
        app:cardElevation="0dp"
        android:background="#38414b"
        app:cardCornerRadius="0dp"
        android:visibility="gone">
    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/playerView"
        android:keepScreenOn="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

</FrameLayout>
